<h1>Artículos en venta:</h1>

<% @products.each do |product| %>
<%= link_to product_path(product.id), class: 'product' do %>
<h2><%= product.title %></h2>
<%= image_tag product.image, width: 100 if product.image.attached? %>

<div><span><%= product.price %>€</span></div>
<% end %>
<% end %>